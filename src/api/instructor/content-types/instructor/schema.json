{
  "kind": "collectionType",
  "collectionName": "instructors",
  "info": {
    "singularName": "instructor",
    "pluralName": "instructors",
    "displayName": "Instructor",
    "description": "Course instructors"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name"
    },
    "bio": {
      "type": "richtext"
    },
    "avatar": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "email": {
      "type": "email",
      "unique": true
    },
    "socialLinks": {
      "type": "component",
      "repeatable": true,
      "component": "shared.social-link"
    },
    "courses": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::course.course",
      "mappedBy": "instructor"
    },
    "user": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "admin::user",
      "private": true
    }
  }
}
