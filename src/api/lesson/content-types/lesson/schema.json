{
    "kind": "collectionType",
    "collectionName": "lessons",
    "info": {
        "singularName": "lesson",
        "pluralName": "lessons",
        "displayName": "Lesson",
        "description": "Course lessons"
    },
    "options": {
        "draftAndPublish": true
    },
    "pluginOptions": {},
    "attributes": {
        "title": {
            "type": "string",
            "required": true
        },
        "content": {
            "type": "richtext"
        },
        "videoUrl": {
            "type": "string"
        },
        "order": {
            "type": "integer",
            "required": true
        },
        "duration": {
            "type": "integer"
        },
        "attachments": {
            "type": "media",
            "multiple": true,
            "allowedTypes": [
                "files",
                "images",
                "videos",
                "audios"
            ]
        },
        "isPreview": {
            "type": "boolean",
            "default": false
        },
        "module": {
            "type": "relation",
            "relation": "manyToOne",
            "target": "api::module.module",
            "inversedBy": "lessons"
        }
    }
}