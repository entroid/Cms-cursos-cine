{
    "kind": "collectionType",
    "collectionName": "categories",
    "info": {
        "singularName": "category",
        "pluralName": "categories",
        "displayName": "Category",
        "description": "Course categories"
    },
    "options": {
        "draftAndPublish": true
    },
    "pluginOptions": {},
    "attributes": {
        "name": {
            "type": "string",
            "required": true,
            "unique": true
        },
        "slug": {
            "type": "uid",
            "targetField": "name"
        },
        "description": {
            "type": "text"
        },
        "icon": {
            "type": "string"
        },
        "color": {
            "type": "string"
        },
        "courses": {
            "type": "relation",
            "relation": "manyToMany",
            "target": "api::course.course",
            "mappedBy": "categories"
        }
    }
}