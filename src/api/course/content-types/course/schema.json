{
  "kind": "collectionType",
  "collectionName": "courses",
  "info": {
    "singularName": "course",
    "pluralName": "courses",
    "displayName": "Course",
    "description": "Online courses"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title"
    },
    "coverImage": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "shortDescription": {
      "type": "text",
      "maxLength": 200
    },
    "fullDescription": {
      "type": "richtext"
    },
    "instructor": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::instructor.instructor",
      "inversedBy": "courses"
    },
    "level": {
      "type": "enumeration",
      "enum": [
        "beginner",
        "intermediate",
        "advanced"
      ]
    },
    "estimatedDuration": {
      "type": "integer",
      "min": 0
    },
    "priceUsd": {
      "type": "integer",
      "min": 0
    },
    "priceArg": {
      "type": "integer",
      "min": 0
    },
    "tags": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::tag.tag",
      "inversedBy": "courses"
    },
    "modules": {
      "type": "component",
      "component": "course.module",
      "repeatable": true
    },
    "settings": {
      "type": "component",
      "component": "course.settings",
      "repeatable": false
    },
    "enrollments": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::enrollment.enrollment",
      "mappedBy": "course"
    }
  }
}